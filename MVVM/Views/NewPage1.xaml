<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM.Views.NewPage1"
             Title="NewPage1" 
             xmlns:viewModel="clr-namespace:MVVM.ViewModels"
             x:DataType="viewModel:NewViewModel2"
             >
    <VerticalStackLayout Spacing="10">
        <Label 
            Text="{Binding Text}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding Text}"/>
        <Button Text="화면이동" Command="{Binding 화면이동Command}"/>
        <Button Text="데이터전달하기" Command="{Binding 데이터전달하기Command}"/>
    </VerticalStackLayout>
</ContentPage>